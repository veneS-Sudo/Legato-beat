<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Legato_beat.Views.AlbumView">

	<StackPanel Orientation="Vertical">
		<Image MaxWidth="250" MaxHeight="250" 
			   Source="avares://Legato beat/Assets/avalonia-logo.ico" Tag="album image"/>
		<Label Content="" Tag="album name" />
		<TextBlock Text="" Tag="artist name" />
		<TextBlock Text="" Tag="year" />
	</StackPanel>
</UserControl>
